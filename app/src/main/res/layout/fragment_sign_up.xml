<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:id="@+id/rlHeader"
    tools:ignore="MissingConstraints">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@drawable/logo"
        ></ImageView>

</RelativeLayout>

<RelativeLayout
    app:layout_constraintTop_toBottomOf="@id/rlHeader"
    android:layout_width="220dp"
    android:layout_height="480dp"
    android:background="@drawable/shape_right_panel"
    app:layout_constraintRight_toRightOf="parent"
    >
</RelativeLayout>
<LinearLayout
    android:id="@+id/loginPanel"
    app:layout_constraintTop_toBottomOf="@+id/rlHeader"
    android:layout_marginTop="60dp"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="@drawable/shape_login_panel"
    android:paddingTop="40dp"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/circleImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:src="@drawable/logo"
        />
    <EditText
        android:id="@+id/nick_name"
        android:hint="Nick Name"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>
    <EditText
        android:id="@+id/loginEmailText"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>
    <EditText
        android:id="@+id/loginPasswordText"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <EditText
        android:id="@+id/loginPasswordTextConfirm"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>



</LinearLayout>
<androidx.appcompat.widget.AppCompatButton
    android:id="@+id/sign_up_button"
    android:layout_marginBottom="5dp"
    android:text="Sign Up"
    android:textColor="@color/white"
    android:layout_width="150dp"
    android:layout_height="50dp"
    app:layout_constraintBottom_toBottomOf="@+id/loginPanel"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:background="@drawable/shape_login_button"
    />
<TextView
    android:id="@+id/loginTop"
    android:textSize="20sp"
    android:layout_marginLeft="40dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Login"
    app:layout_constraintTop_toTopOf="@id/loginPanel"

    ></TextView>
<TextView
    android:gravity="right"
    android:textSize="20sp"
    android:layout_marginRight="40dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/white"
    android:text="Sign Up"
    app:layout_constraintTop_toTopOf="@id/loginPanel"

    ></TextView>


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>